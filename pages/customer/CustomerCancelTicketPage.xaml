<Page x:Class="sample2.pages.customer.CustomerCancelTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerCancelTicketPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Cancel Ticket" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <ComboBox x:Name="cmbTicket">
                <ComboBoxItem Content="Tech Expo - VIP"/>
                <ComboBoxItem Content="Music Night - General"/>
            </ComboBox>
            <Button Content="Cancel Ticket" Width="150" Margin="0,10,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
