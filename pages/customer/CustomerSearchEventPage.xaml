<Page x:Class="sample2.pages.customer.CustomerSearchEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerSearchEventPage">

 

        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Search Events" FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                <!-- Placeholder workaround -->
                <Grid Width="300" Height="30" Margin="0,0,0,10">
                    <TextBox x:Name="txtSearch" Height="30" />
                    <TextBlock Text="Enter event name..." Foreground="Gray" Margin="5,5,0,0"
                           IsHitTestVisible="False" x:Name="txtPlaceholder"
                           VerticalAlignment="Top" HorizontalAlignment="Left"/>

                </Grid>

                <Button Content="Search" Width="100" Height="30"
                    Background="#3498DB" Foreground="White"
                    Click="Search_Click"/>

                <ListBox x:Name="lstResults" Margin="0,20,0,0" Height="200"/>
            </StackPanel>
        </Grid>
    </Page>


