<Page x:Class="sample2.pages.customer.CustomerPurchaseTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPurchaseTicketPage">
    <Grid Margin="20">
        <StackPanel Width="400">
            <TextBlock Text="Purchase Ticket" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Event:"/>
            <ComboBox x:Name="cmbEvent">
                <ComboBoxItem Content="Tech Expo"/>
                <ComboBoxItem Content="Music Night"/>
            </ComboBox>

            <Label Content="Ticket Type:"/>
            <ComboBox x:Name="cmbTicketType">
                <ComboBoxItem Content="General"/>
                <ComboBoxItem Content="VIP"/>
            </ComboBox>

            <Label Content="Quantity:"/>
            <TextBox x:Name="txtQuantity"/>

            <Button Content="Buy Ticket" Width="150" Margin="0,10,0,0" Click="Buy_Click"/>
        </StackPanel>
    </Grid>
</Page>
