<Page x:Class="sample2.pages.customer.CustomerPaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPaymentsPage">


    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Payments" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Card Number Field -->
            <Grid Height="30" Margin="0,0,0,10">
                <TextBox x:Name="txtCardNumber" />
                <TextBlock Text="Card Number" x:Name="phCard" Foreground="Gray"
                           Margin="5,5,0,0" VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Cardholder Name Field -->
            <Grid Height="30" Margin="0,0,0,10">
                <TextBox x:Name="txtName" />
                <TextBlock Text="Cardholder Name" x:Name="phName" Foreground="Gray"
                           Margin="5,5,0,0" VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Amount Field -->
            <Grid Height="30" Margin="0,0,0,10">
                <TextBox x:Name="txtAmount" />
                <TextBlock Text="Amount" x:Name="phAmount" Foreground="Gray"
                           Margin="5,5,0,0" VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Make Payment" Background="#E67E22"
                    Foreground="White" Height="30" Width="150"
                    Click="Pay_Click"/>
        </StackPanel>
    </Grid>
</Page>
