<Page x:Class="sample2.pages.customer.CustomerRegisterEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerRegisterEventPage">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">
            <TextBlock Text="Register for Event" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,20"/>

            <Label Content="Event Name:"/>
            <TextBox x:Name="txtEventName" Height="30" Margin="0,0,0,10"/>

            <Label Content="Date:"/>
            <DatePicker x:Name="dpEventDate" Height="30" Margin="0,0,0,10"/>

            <Label Content="Category:"/>
            <ComboBox x:Name="cmbCategory" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Technology"/>
                <ComboBoxItem Content="Music"/>
                <ComboBoxItem Content="Sports"/>
            </ComboBox>

            <Label Content="Location:"/>
            <TextBox x:Name="txtLocation" Height="30" Margin="0,0,0,20"/>

            <Button Content="Register" Width="150" Height="40" Background="#1ABC9C" Foreground="White" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Page>
