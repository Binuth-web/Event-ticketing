<Page x:Class="sample2.pages.customer.CustomerManageTicketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sample2.pages.customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerManageTicketsPage">
    <Grid Margin="20">
        <StackPanel Width="400">
            <TextBlock Text="Manage Ticket Types" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Ticket Type:"/>
            <ComboBox x:Name="cmbType">
                <ComboBoxItem Content="General"/>
                <ComboBoxItem Content="VIP"/>
                <ComboBoxItem Content="Student"/>
            </ComboBox>

            <Label Content="Price:"/>
            <TextBox x:Name="txtPrice" Margin="0,0,0,10"/>

            <Label Content="Availability:"/>
            <TextBox x:Name="txtAvailability"/>

            <Button Content="Save" Width="100" Height="30" Background="#27AE60" Foreground="White" Margin="0,10,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
